{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es5",
      "es2015.iterable",
      "es2015.collection",
      "es2015.promise",
      "es2015.core",
      "es2015.proxy"
    ],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2018",
    "downlevelIteration": true,
    "strict": true
  },
  "include": ["src/**/*.ts*", "test/**/*.ts*"]
}
